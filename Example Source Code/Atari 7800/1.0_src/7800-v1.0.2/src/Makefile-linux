TARGET = gp2x7800
SDL_CONFIG = sdl-config
OBJS = gp2x_psp.o \
  psp_main.o psp_kbd.o psp_sdl.o psp_font.o \
  psp_fmgr.o psp_menu.o  psp_menu_kbd.o psp_menu_set.o \
  psp_menu_help.o psp_sound.o \
  Sound.o \
  global.o \
  psp_danzeff.o \
  psp_atari.o \
  Bios.o \
  Database.o \
  Common.o \
  Cartridge.o \
  Hash.o \
  Logger.o \
  Maria.o \
  Memory.o \
  Palette.o \
  Pokey.o \
  ProSystem.o \
  Region.o \
  Riot.o \
  Sally.o \
  Tia.o \
  libzip/unzip.o \
  libzip/ioapi.o \
  libzip/zip.o \
  Archive.o

DEFAULT_CFLAGS = $(shell $(SDL_CONFIG) --cflags)

MORE_CFLAGS = -I/usr/include  -I. -Ilibzip -DNO_STDIO_REDIRECT

CFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -O3 -fsigned-char
CXXFLAGS = $(DEFAULT_CFLAGS) $(MORE_CFLAGS) -fno-exceptions -fno-rtti

LIBS += -L/usr/lib -L/usr/X11R6/lib -lSDL_image -lSDL -lXext -lX11 -lpng -ljpeg -lz -lm -lpthread

all : $(TARGET)

$(TARGET): $(OBJS)
	gcc $(CFLAGS) $(OBJS) $(LIBS) -o $(TARGET)

clean:
	rm -f $(OBJS) $(TARGET)

ctags: 
	ctags *[ch]
